<% layout("layouts/boilerPlate") %>
  <div class="row">
    <div class="col-7 offset-2 mt-4">
      <h3 style="padding-left: 5rem">
        <%= listing.title %>
      </h3>

      <div class="card" style="width: 30rem;">
        <img class="card-img-top offset-2" src="<%= listing.image %>" alt="Card image cap" style="height: 20rem;">
        <div class="card-body offset-2"><br>
          <%= listing.description %><br />
            <b>&#8377; <%= listing.price %><br /></b>
            <%= listing.location %><br />
              <%= listing.country %><br />
        </div>
      </div>
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-1 edit-btn co4 offset-1"
          style="margin-left: 80px;">edit data</a><br><br>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-dark offset-1 col">Delete</button><br>
        </form>
      </div><br>
    </div>
  </div>

  <hr>

  <div class="col-8 offset-3">
    <h3>Add your Reviews :</h3>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <!-- Update with your reviews route -->

      <label for="rating" class="form-label">Rating</label>
      <input type="range" id="rating" name="review[rating]" min="1" max="5" step="1" class="form-range"><br>
      <label for="comment" class="form-label">Comment</label>
      <textarea id="comment" name="review[comment]" rows="5" cols="30" required class="form-control">
      </textarea>
      <div class="invalid-feedback">
        please enter your feedback !
      </div><br>
      <button type="submit" class="btn btn-outline-dark mb-8">Submit</button>
    </form>
  </div>